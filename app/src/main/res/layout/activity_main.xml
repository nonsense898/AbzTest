<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Top AppBar Layout -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top_bar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F4E041"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:titleCentered="true">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Working with GET request"
                    android:textColor="#000000"
                    android:textSize="24sp" />

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/hostContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/customBottomNav"
            app:layout_constraintTop_toBottomOf="@id/top_bar_view"
            app:navGraph="@navigation/navigation_graph" />


        <!-- Custom bottom navigation -->
        <include
            android:background="#F8F8F8"
            android:id="@+id/customBottomNav"
            layout="@layout/custom_bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>