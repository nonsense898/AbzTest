<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nav_splash">

    <fragment
        android:id="@+id/nav_users"
        android:name="com.non.abztest.ui.UsersFragment.UsersFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_users">

        <action
            android:id="@+id/action_nav_users_to_nav_signup"
            app:destination="@id/nav_signup" />
    </fragment>

    <fragment
        android:id="@+id/nav_signup"
        android:name="com.non.abztest.ui.SignUpFragment.SignUpFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_nav_signup_to_nav_users"
            app:destination="@id/nav_users" />
    </fragment>
    <fragment
        android:id="@+id/nav_splash"
        android:name="com.non.abztest.ui.Splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_nav_splash_to_nav_users"
            app:destination="@id/nav_users" />



        <action
            android:id="@+id/action_nav_splash_to_nav_no_connection"
            app:destination="@id/nav_no_connection" />
    </fragment>
    <fragment
        android:id="@+id/nav_no_connection"
        android:name="com.non.abztest.ui.NoConnectionFragment.NoConnectionFragment"
        android:label="NoConnectionFragment"
        tools:layout="@layout/fragment_no_connection"/>

    <action
        android:id="@+id/action_global_noConnectionFragment"
        app:destination="@id/nav_no_connection" />
</navigation>